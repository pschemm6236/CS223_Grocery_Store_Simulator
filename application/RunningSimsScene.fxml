<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SceneController">
   <children>
      <AnchorPane layoutX="0" layoutY="0" prefHeight="420.0" prefWidth="420.0">
         <children>
            <Label layoutX="143.0" layoutY="46.0" text="Currnet in progress sims" />
            <ButtonBar layoutX="-4.0" prefHeight="54.0" prefWidth="410.0">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#switchToWelcomeScene" text="Welcome">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Button>
                  <Button layoutX="93.0" layoutY="18.0" mnemonicParsing="false" onAction="#switchToRecSettingScene" text="Rec Settings">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Button>
                  <Button layoutX="140.0" layoutY="21.0" mnemonicParsing="false" onAction="#switchToStartSimScene" text="Start Sim">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Button>
                  <Button layoutX="190.0" layoutY="21.0" mnemonicParsing="false" text="Running Sims">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Button>
                  <Button layoutX="270.0" layoutY="21.0" mnemonicParsing="false" onAction="#switchToSimResultsScene" text="Sim Results">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Button>
               </buttons>
            </ButtonBar>
            <ProgressBar fx:id="myProgressBar" layoutX="84.0" layoutY="185.0" prefHeight="50.0" prefWidth="250.0" />
            <Label fx:id="myRunLabel" layoutX="53.0" layoutY="130.0" text="Customers Served: ##/##">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Label fx:id="myTimeLabel" layoutX="176.0" layoutY="93.0" text="Time:">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
