<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SceneController">
   <children>
      <AnchorPane layoutX="0" layoutY="0" prefHeight="420.0" prefWidth="420.0">
         <children>
            <AnchorPane layoutX="0" layoutY="0" prefHeight="420.0" prefWidth="420.0">
               <children>
                  <Label layoutX="87.0" layoutY="41.0" text="Enter your simulation settings">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font></Label>
          	  	<ButtonBar layoutX="-4.0" prefHeight="54.0" prefWidth="410.0">
                     <buttons>
                        <Button mnemonicParsing="false" onAction="#switchToWelcomeScene" text="Welcome">
                           <font>
                              <Font size="9.0" />
                           </font>
                        </Button>
                        <Button layoutX="93.0" layoutY="18.0" mnemonicParsing="false" onAction="#switchToRecSettingScene" text="Rec Settings">
                           <font>
                              <Font size="9.0" />
                           </font>
                        </Button>
                        <Button layoutX="140.0" layoutY="21.0" mnemonicParsing="false" text="Start Sim">
                           <font>
                              <Font size="9.0" />
                           </font>
                        </Button>
                        <Button layoutX="190.0" layoutY="21.0" mnemonicParsing="false" onAction="#switchToRunningSimsScene" text="Running Sims">
                           <font>
                              <Font size="9.0" />
                           </font>
                        </Button>
                        <Button layoutX="270.0" layoutY="21.0" mnemonicParsing="false" onAction="#switchToSimResultsScene" text="Sim Results">
                           <font>
                              <Font size="9.0" />
                           </font>
                        </Button>
                     </buttons>
                  </ButtonBar>
                  <TextField fx:id="fullLines" layoutX="40.0" layoutY="97.0" onAction="#startSim" promptText="ex. 2" />
                  <Label layoutX="40.0" layoutY="75.0" text="Number of full-service lines" />
                  <TextField fx:id="selfLines" layoutX="40.0" layoutY="145.0" onAction="#startSim" promptText="ex. 6" />
                  <Label layoutX="40.0" layoutY="122.0" text="Number of self-service lines" />
                  <TextField fx:id="minArrival" layoutX="40.0" layoutY="201.0" onAction="#startSim" promptText="ex. 1" />
                  <Label layoutX="40.0" layoutY="178.0" text="Minimum arrival time " />
                  <TextField fx:id="maxArrival" layoutX="40.0" layoutY="257.0" onAction="#startSim" promptText="ex. 4" />
                  <Label layoutX="40.0" layoutY="234.0" text="Maximum arrival time " />
                  <TextField fx:id="minService" layoutX="40.0" layoutY="308.0" onAction="#startSim" promptText="ex. 3" />
                  <Label layoutX="40.0" layoutY="292.0" text="Minimum service time" />
                  <TextField fx:id="maxService" layoutX="40.0" layoutY="356.0" onAction="#startSim" promptText="ex. 4" />
                  <Label layoutX="40.0" layoutY="333.0" text="Maximum service time" />
                  <TextField fx:id="numCust" layoutX="233.0" layoutY="253.0" onAction="#startSim" promptText="ex. 3 - 12" />
                  <Label layoutX="233.0" layoutY="235.0" text="Number of customers" />
                  <TextField fx:id="percentSlowSelf" layoutX="233.0" layoutY="306.0" onAction="#startSim" promptText="ex. 25" />
                  <Label layoutX="233.0" layoutY="291.0" text="Percentage slower for SELF" />
                  <Button fx:id="simButton" layoutX="279.0" layoutY="369.0" mnemonicParsing="false" onAction="#startSim" text="Start Sim" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
